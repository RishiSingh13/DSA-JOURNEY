/**
 * Definition for singly-linked list.
 * struct ListNode {
 *     int val;
 *     ListNode *next;
 *     ListNode(int x) : val(x), next(NULL) {}
 * };
 */
class Solution {
public:
    ListNode *detectCycle(ListNode *head) {
        ListNode * fast=head;
        ListNode * slow=head;
        ListNode * prev=NULL;
        bool iscycle=false;
        while((fast && fast->next)!=NULL){
            fast=fast->next->next;
            slow=slow->next;
            if(slow==fast){
            iscycle=true;
            break;
            }

        }
        if(!iscycle)
        return NULL;
        slow=head;
        while(slow!=fast){
            slow=slow->next;
            prev=fast;
            fast=fast->next;
        }
        prev->next=NULL;
        return slow;
    }
};
