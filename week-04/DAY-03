#include <iostream>
using namespace std;
int sum(int * arr,int n){
    if(n==0)
    return 0;
    if(n==1)
    return arr[0];
    int  s=0;
    int remaining= sum(arr+1,n-1);
    s=arr[0]+remaining;
    return s;
}

int main() {
    int arr[]={1,3,6,8,9,12};
    cout<<sum(arr,6)<<endl;
    return 0;
}
