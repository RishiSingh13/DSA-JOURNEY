#include <iostream>
using namespace std;
void merg(int * arr,int s,int e){
    int mid=(s+e)/2;
    int len1=mid-s+1;
    int len2=e-mid;
    int * first=new int[len1];
    int * second=new int[len2];
    int maini=s;
    for(int i=0;i<len1;i++){
        first[i]=arr[maini++];
    }
    maini=mid+1;
    for(int i=0;i<len2;i++){
        second[i]=arr[maini++];
    }
    int index1=0,index2=0;
    maini=s;
    while(index1<len1 && index2<len2){
        if(first[index1]<second[index2]){
            arr[maini++]=first[index1++];
        }
        else{
              arr[maini++]=second[index2++];
        }
    }
    while(index1<len1){
        arr[maini++]=first[index1++];
    }
    while(index2<len2){
        arr[maini++]=second[index2++];
    }
delete []first;
delete []second;
}
void sort(int * arr,int s,int e){
   int mid=(s+e)/2;
    if(s>=e)
    return;
    sort(arr,s,mid);
    sort(arr,mid+1,e);
    merg(arr,s,e);
}

int main() {
    int arr[]={23,45,1,0,6,7,13};
    sort(arr,0,6);
    for(int i=0;i<7;i++){
        cout<<arr[i]<<" ";
    }
    return 0;
}
